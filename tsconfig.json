{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    "types/tailwindcss.d.ts",
    ".next/types/**/*.ts",
    "node_modules/@prisma/client/**/*.js|ts",
    "src/prisma/**/*.ts",
    "prisma/**/*.ts|mjs|js",
    "prisma/seed.ts",
    "src/prisma/seed.mts",
    "*.ts|js|mts",
    "src/prisma/seed/seed.mjs",
    "src/prisma/seed/seed.mjs"
  ],
  "exclude": ["node_modules"]
}
